{% extends 'emails/base_email_template.html.twig' %}

{% block template_title %}
    {{ app.user.fullName }} <strong>{{ 'updated a task' | trans() }}</strong> <a href="{{ base_url ~ path('project_task_details', {'id': task.project.id, 'taskId': task.id}) }}" style="color:#3b73af;text-decoration:none;" target="_blank" rel="noopener noreferrer"><img height="16" width="16" border="0" align="absmiddle" alt="Task" src="../message_part/?_uid=1130000023966733&amp;hid=1.4&amp;ids=162974011515471407&amp;name=&amp;yandex_class=yandex_inline_content_320.mail:1130000023966733.E370834:26556666355730289872878139301_1.4_162974011515471407"> {{ '#' ~ task.id }}: {{ task.title }}</a>
{% endblock %}
{% block template_description %}
{% endblock %}
{% block template_table %}
    <table style="border-collapse:collapse;">
        <tbody>
        {% for changes in taskChanges %}
            <tr>
                <th style="color:#707070;font:normal 14px/20px Arial,sans-serif;text-align:left;vertical-align:top;padding:2px 0;">{{ (changes.field | capitalize) | trans() }}:</th>
                <td style="padding:0;border-collapse:collapse;font:normal 14px/20px Arial,sans-serif;padding:2px 0 2px 5px;vertical-align:top;">
                    <span style="background-color:#ffe7e7;text-decoration:line-through;">{{ changes.oldValue | trans() }}</span> <span style="background-color:#ddfade;">{{ changes.newValue | trans() }}</span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}