{% macro inputs(purchaseCategories) %}
    <div class="form-group">
        <label class="col-sm-4 control-label">{{ 'Select categories' | trans() }}</label>
        <div class="col-sm-7">
            <select class="form-control select2-modal" name="categories[]" multiple required>
                {% for category in purchaseCategories %}
                    <option value="{{ category.id }}">
                        {{ category.title }}
                    </option>
                {% endfor %}
            </select>
        </div>
    </div>
{% endmacro %}