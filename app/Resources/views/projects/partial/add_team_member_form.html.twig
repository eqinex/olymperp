{% macro inputs(companyUsers, project) %}
    <div class="form-group">
        <label class="col-sm-4 control-label">{{ "Select users" | trans() }}</label>
        <div class="col-sm-7">
            <select class="form-control select2-modal" name="teamMembers[]" multiple required>
                {% for team, members in companyUsers %}
                    <optgroup label="{{ team | trans() }}">
                        {% for member in members %}
                            <option value="{{ member.id }}">{{ member.fullName }} ({{ member.employeeRole }})</option>
                        {% endfor %}
                    </optgroup>
                {% endfor %}
            </select>
        </div>
    </div>
{% endmacro %}