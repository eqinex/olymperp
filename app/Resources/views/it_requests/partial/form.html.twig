{% macro inputs() %}
    <div class="form-group">
        <label class="col-sm-3 control-label"><span class="text-danger">*</span> {{ 'Title' | trans() }}</label>
        <div class="col-sm-8">
            <input type="hidden" class="form-control request-id" value="" name="id">
            <input type="text" class="form-control request-title" required placeholder="{{ 'Title' | trans() }}" value="" name="it_request[title]">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">{{ "Description" | trans() }}</label>
        <div class="col-sm-8">
            <textarea class="form-control request-description" rows="4" placeholder="{{ "Description" | trans() }}" name="it_request[description]"></textarea>
        </div>
    </div>
{% endmacro %}