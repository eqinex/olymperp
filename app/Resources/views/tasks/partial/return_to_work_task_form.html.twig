{% macro inputs() %}
    <div class="form-group">
        <label class="col-sm-4 control-label">{{ "Comment" | trans() }}</label>
        <div class="col-sm-7">
            <textarea name="task[comment][text]" required class="form-control" placeholder="{{ 'Enter your message' | trans() }}"></textarea>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $('.return-to-work-task').click(function(){
                var returnTaskForm = $('#returnTaskForm');
                returnTaskForm.attr('action', $(this).data('href'));
            });
        });
    </script>
{% endmacro %}