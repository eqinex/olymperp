{% macro inputs() %}
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "item.title" | trans() | capitalize }}</label>
        <div class="col-sm-5">
            <input type="text" class="item-designation form-control material-name" placeholder="{{ ('item.title' | trans() | capitalize) }} " value="" name="material[name]" required="required">
        </div>
        <label class="col-sm-2 control-label">{{ ('Quantity' | trans()) | capitalize }}</label>
        <div class="col-sm-2">
            <input type="number" class="form-control material-quantity" placeholder="{{ ('Quantity' | trans()) }}" value="" name="material[quantity]" required="required">
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Comment" | trans() }}</label>
        <div class="col-lg-9">
            <textarea class="form-control material-comment" placeholder="{{ "Comment" | trans() }}" name="material[comment]"></textarea>
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $('.editMaterialForm').bind('click', function(){
                var editMaterialForm = $('#editMaterialForm');
                editMaterialForm.attr('action', $(this).data('href'));
                editMaterialForm.find('.material-name').val($(this).data('name'));
                editMaterialForm.find('.material-quantity').val($(this).data('quantity'));
                editMaterialForm.find('.material-comment').val($(this).data('comment'));
            });
        });
    </script>
{% endmacro %}
