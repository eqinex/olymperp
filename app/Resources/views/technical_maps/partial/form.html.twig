{% macro inputs() %}
    <input type="hidden" class="form-control technical-map-id" value="" name="id">
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Task" | trans() }}</label>
        <div class="col-lg-4">
            <input type="text" class="form-control technical-map-task" placeholder="{{ "Task" | trans() }}" name="technicalMap[task]" required>
        </div>
        <label class="col-sm-2 control-label">{{ "Project" | trans() }}</label>
        <div class="col-sm-3">
            <select class="form-control select2-modal technical-map-project" name="technicalMap[project]" required>
                <option value="">{{ 'Select project' | trans() }}</option>
                {% for project in project_service.getAvailableProjects(app.user) %}
                    <option value="{{ project.id }}"
                            {% if activity.project.id is defined and activity.project.id == project.id %}
                                {{ "selected" }}
                            {% endif %}>{{ project.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Goal" | trans() }}</label>
        <div class="col-lg-9">
            <textarea class="form-control technical-map-goal" placeholder="{{ "Goal" | trans() }}" name="technicalMap[goal]"></textarea>
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Criterion" | trans() ~ ' 1' }}</label>
        <div class="col-lg-4">
            <input type="text" class="form-control technical-map-criterion1" placeholder="{{ "Criterion" | trans() ~ ' 1' }}" name="technicalMap[criterion1]" required>
        </div>
        <label class="col-sm-2 control-label">{{ "Points" | trans() }}</label>
        <div class="col-lg-3">
            <input type="text" pattern="^[0-9]+$" class="form-control technical-map-max-points1" placeholder="{{ "Points" | trans() }}" name="technicalMap[maxPoints1]">
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Criterion" | trans() ~ ' 2' }}</label>
        <div class="col-lg-4">
            <input type="text" class="form-control technical-map-criterion2" placeholder="{{ "Criterion" | trans() ~ ' 2' }}" name="technicalMap[criterion2]" required>
        </div>
        <label class="col-sm-2 control-label">{{ "Points" | trans() }}</label>
        <div class="col-lg-3">
            <input type="text" pattern="^[0-9]+$" class="form-control technical-map-max-points2" placeholder="{{ "Points" | trans() }}" name="technicalMap[maxPoints2]">
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Criterion" | trans() ~ ' 3' }}</label>
        <div class="col-lg-4">
            <input type="text" class="form-control technical-map-criterion3" placeholder="{{ "Criterion" | trans() ~ ' 3' }}" name="technicalMap[criterion3]">
        </div>
        <label class="col-sm-2 control-label">{{ "Points" | trans() }}</label>
        <div class="col-lg-3">
            <input type="text" pattern="^[0-9]+$" class="form-control technical-map-max-points3" placeholder="{{ "Points" | trans() }}" name="technicalMap[maxPoints3]">
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label class="col-sm-2 control-label">{{ "Criterion" | trans() ~ ' 4' }}</label>
        <div class="col-lg-4">
            <input type="text" class="form-control technical-map-criterion4" placeholder="{{ "Criterion" | trans() ~ ' 4' }}" name="technicalMap[criterion4]">
        </div>
        <label class="col-sm-2 control-label">{{ "Points" | trans() }}</label>
        <div class="col-lg-3">
            <input type="text" pattern="^[0-9]+$" class="form-control technical-map-max-points4" placeholder="{{ "Points" | trans() }}" name="technicalMap[maxPoints4]">
        </div>
    </div>


    <script>
        $(document).ready(function() {
            moment.locale('ru');

            $('.edit-technical-map').bind('click', function () {
                var editTechnicalMapForm = $('#editTechnicalMapForm');
                editTechnicalMapForm.attr('action', $(this).data('href'));
                editTechnicalMapForm.find('.technical-map-id').val($(this).data('id'));
                editTechnicalMapForm.find('.technical-map-project').val($(this).data('project'));
                editTechnicalMapForm.find('.technical-map-task').val($(this).data('task'));
                editTechnicalMapForm.find('.technical-map-goal').val($(this).data('goal'));
                editTechnicalMapForm.find('.technical-map-criterion1').val($(this).data('criterion1'));
                editTechnicalMapForm.find('.technical-map-criterion2').val($(this).data('criterion2'));
                editTechnicalMapForm.find('.technical-map-criterion3').val($(this).data('criterion3'));
                editTechnicalMapForm.find('.technical-map-criterion4').val($(this).data('criterion4'));
                editTechnicalMapForm.find('.technical-map-max-points1').val($(this).data('max-points1'));
                editTechnicalMapForm.find('.technical-map-max-points2').val($(this).data('max-points2'));
                editTechnicalMapForm.find('.technical-map-max-points3').val($(this).data('max-points3'));
                editTechnicalMapForm.find('.technical-map-max-points4').val($(this).data('max-points4'));

                $('.select2-modal').select2({width: '100%'});
            });
        });
    </script>

{% endmacro %}