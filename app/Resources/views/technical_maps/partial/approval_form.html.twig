{% macro inputs(users, signatoryUsers, solutions) %}
    <div class="form-group">
        <label class="col-sm-4 control-label">{{ "Select users" | trans() }}</label>
        <div class="col-sm-7">
            <select class="form-control select2-modal" name="signatories[]" multiple required>
                {% for team, members in users %}
                    <optgroup label="{{ team | trans() }}">
                        {% for member in members %}
                            <option value="{{ member.id }}"
                                {% if signatoryUsers[member.id] is defined %}
                                    {{ "selected" }}
                                {% endif %}
                            >{{ member.fullName }} ({{ member.employeeRole }})</option>
                        {% endfor %}
                    </optgroup>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">{{ "Select technical solution" | trans() }}</label>
        <div class="col-sm-7">
            <select class="form-control select2-modal" name="solutions" required>
                {% for solution in solutions %}
                    <option value="{{ solution.id }}">{{ solution.name }} </option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-4 control-label">{{ "Justification choice" | trans() }}</label>
        <div class="col-sm-7">
            <textarea name="technicalMap[comment][text]" required class="form-control" id="textarea-approval" placeholder="{{ 'Justification choice' | trans() }}"></textarea>
        </div>
    </div>
{% endmacro %}