{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="panel-body">
    <h2 class="text-center f-w-300 m-b-0">Авторизация</h2>
    <form class="m-t-3" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <input class="form-control" id="username" placeholder="{{ 'security.login.username'|trans }}" name="_username" value="{{ last_username }}" required="required">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="password" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required">
        </div>
        <div class="checkbox">
            <label>
                <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" value="on">
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </label>
        </div>
        <button type="submit" class="btn btn-block m-b-2 btn-primary" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
    </form>
</div>